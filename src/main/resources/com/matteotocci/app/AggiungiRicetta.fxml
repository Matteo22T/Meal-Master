<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="872.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.matteotocci.app.controller.AggiungiRicetteController">
    <children>
      <HBox prefHeight="500.0" prefWidth="872.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox fillWidth="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="510.0" prefWidth="546.0" spacing="10.0">
               <children>
                    <TextField fx:id="nomeRicetta" prefHeight="39.0" prefWidth="542.0" promptText="Nome nuova ricetta...">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </TextField>
                   <HBox prefHeight="40.0" prefWidth="546.0">
                       <children>

                           <TextField fx:id="cercaAlimento" prefHeight="40.0" prefWidth="247.0" promptText="Cerca alimento.." />
                           <Button fx:id="bottoneCerca" onAction="#handleCercaAlimento" prefHeight="40.0" prefWidth="106.0" text="Cerca" />
                           <ComboBox fx:id="categoriaComboBox" prefHeight="40.0" prefWidth="129.0" promptText="Categoria" />
                           <CheckBox fx:id="mieiAlimentiCheckBox" prefHeight="40.0" prefWidth="162.0" text=" Solo i miei alimenti">
                               <padding>
                                   <Insets left="5.0" />
                               </padding></CheckBox>

                       </children>
                   </HBox>
                    <TableView fx:id="tableView" editable="true" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="339.0" prefWidth="681.0">
                        <columns>
                            <TableColumn fx:id="immagineCol" text="Immagine" />
                            <TableColumn fx:id="nomeCol" prefWidth="141" text="Nome" />
                            <TableColumn fx:id="brandCol" text="Brand" />
                            <TableColumn fx:id="calorieCol" prefWidth="80" text="Calorie" />
                            <TableColumn fx:id="proteineCol" prefWidth="80" text="Proteine" />
                            <TableColumn fx:id="carboidratiCol" prefWidth="80" text="Carboidrati" />
                            <TableColumn fx:id="grassiCol" prefWidth="80" text="Grassi" />
                            <TableColumn fx:id="grassiSatCol" prefWidth="80" text="Grassi Saturi" />
                            <TableColumn fx:id="saleCol" prefWidth="80" text="Sale" />
                            <TableColumn fx:id="fibreCol" prefWidth="80" text="Fibre" />
                            <TableColumn fx:id="zuccheriCol" prefWidth="80" text="Zuccheri" />
                        </columns>
                    </TableView>
                  <HBox prefHeight="26.0" prefWidth="548.0">
                     <children>
                  
                          <!-- Quantità Alimento (per aggiungere più alimenti) -->
                          <Label prefHeight="26.0" prefWidth="69.0" text="Quantità (g):" />
                          <TextField fx:id="quantitaField" prefWidth="100" />
                        <Region prefHeight="26.0" prefWidth="18.0" />
                  
                          <!-- Pulsante per aggiungere alimento alla ricetta -->
                          <Button fx:id="aggiungiAlimento" alignment="CENTER" onAction="#handleAggiungiAlimento" text="Aggiungi Alimento" HBox.hgrow="NEVER" />
                        <Region prefHeight="26.0" prefWidth="77.0" />
                  
                                <!-- Pulsante Salva Ricetta -->
                          <Button fx:id="salvaRicetta" onAction="#handleSalvaRicetta" prefHeight="9.0" prefWidth="83.0" text="Salva Ricetta" />
                        <Region prefHeight="26.0" prefWidth="22.0" />
                  
                          <!-- Pulsante Annulla -->
                          <Button fx:id="annulla" onAction="#handleAnnulla" text="Annulla" />
                     </children>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets top="-10.0" />
               </HBox.margin>
            </VBox>
            <VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="500.0" prefWidth="331.0">
               <children>
            
                          <!-- Calcoli nutrizionali -->
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Valori Nutrizionali Totali">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin></Label>
                  <HBox alignment="TOP_CENTER" prefHeight="18.0" prefWidth="212.0">
                     <children>
                        <Label text="Calorie:" />
                        <Label fx:id="calorieTotaliLabel" prefHeight="18.0" prefWidth="74.0" />
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="18.0" prefWidth="212.0">
                     <children>
                        <Label prefHeight="18.0" prefWidth="65.0" text="Carboidrati:" />
                        <Label fx:id="carboidratiTotaliLabel" prefHeight="18.0" prefWidth="51.0" />
                     </children>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="18.0" prefWidth="212.0">
                     <children>
                        <Label text="Grassi:" />
                        <Label fx:id="grassiSaturiTotaliLabel" prefHeight="18.0" prefWidth="84.0" />
                     </children>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="18.0" prefWidth="212.0">
                     <children>
                        <Label text="Proteine:" />
                        <Label fx:id="proteineTotaliLabel" prefHeight="18.0" prefWidth="73.0" />
                     </children>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="18.0" prefWidth="212.0">
                     <children>
                        <Label prefHeight="11.0" prefWidth="71.0" text="Grassi Saturi:" />
                        <Label fx:id="grassiTotaliLabel" prefHeight="18.0" prefWidth="51.0" />
                     </children>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="18.0" prefWidth="212.0">
                     <children>
                        <Label text="Sale:" />
                        <Label fx:id="saleTotaliLabel" prefHeight="18.0" prefWidth="94.0" />
                     </children>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="18.0" prefWidth="212.0">
                     <children>
                        <Label text="Fibre:" />
                        <Label fx:id="fibreTotaliLabel" prefHeight="18.0" prefWidth="91.0" />
                     </children>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="18.0" prefWidth="212.0">
                     <children>
                        <Label text="Zuccheri:" />
                        <Label fx:id="zuccheriTotaliLabel" prefHeight="18.0" prefWidth="72.0" />
                     </children>
                  </HBox>
                   <Label prefHeight="18.0" prefWidth="294.0" style="-fx-font-weight: bold;" text="Ingredienti aggiunti:">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin></Label>
                   <TableView fx:id="ingredientiTable" prefHeight="208.0" prefWidth="294.0">
                       <columns>
                           <TableColumn fx:id="ingredienteNomeCol" prefWidth="150" text="Nome" />
                           <TableColumn fx:id="quantitaCol" prefWidth="100" text="Quantità (g)" />
                           <TableColumn fx:id="modificaCol" prefWidth="80" text="Modifica" />
                           <TableColumn fx:id="eliminaCol" prefWidth="80" text="Elimina" />
                       </columns>
                   </TableView>

               </children>

            </VBox>
         </children>
      </HBox>
    </children>
</AnchorPane>
