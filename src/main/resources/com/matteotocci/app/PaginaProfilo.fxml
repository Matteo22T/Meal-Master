        </VBox>
        <VBox layoutX="180.0" prefHeight="500.0" prefWidth="720.0" style="-fx-padding: 20;">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="720.0" spacing="15.0">
                    <children>
                        <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@immagini/logo.jpg" />
                            </image>
                        </ImageView>
                        <Label fx:id="benvenutoLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;" text="Benvenuto Utente" />
                    </children>
                    <padding>
                        <Insets bottom="15.0" />
                    </padding>
                </HBox>
                <VBox spacing="15.0" VBox.vgrow="ALWAYS">
