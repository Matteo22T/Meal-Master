                        <Label style="-fx-text-fill: #2196F3; -fx-underline: true; -fx-font-size: 16px; -fx-font-weight: bold;" text="Modifica il tuo profilo" />
                        <GridPane hgap="5.0" vgap="8.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="287.6000122070312" minWidth="10.0" prefWidth="130.00003662109373" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="544.3999633789062" minWidth="10.0" prefWidth="544.3999633789062" />
                            </columnConstraints>
                            <children>
                                <Label style="-fx-font-weight: bold;" text="Nome:" GridPane.rowIndex="0" />
                                <TextField fx:id="nomeTextField" prefHeight="35.0" prefWidth="564.0" promptText="Inserisci il nome" style="-fx-border-color: transparent; -fx-background-color: transparent; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="0" editable="false" focusTraversable="false" />
