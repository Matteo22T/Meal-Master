                                <Label style="-fx-font-weight: bold;" text="Data Nascita:" GridPane.rowIndex="3" />
                                <TextField promptText="GG/MM/AAAA" style="-fx-border-color: #ccc; -fx-border-radius: 5; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                <Label style="-fx-font-weight: bold;" text="Altezza (cm):" GridPane.rowIndex="4" />
                                <TextField promptText="Inserisci l'altezza in cm" style="-fx-border-color: #ccc; -fx-border-radius: 5; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                <Label style="-fx-font-weight: bold;" text="Peso Attuale (kg):" GridPane.rowIndex="5" />
                                <TextField promptText="Inserisci il peso attuale in kg" style="-fx-border-color: #ccc; -fx-border-radius: 5; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                <Label style="-fx-font-weight: bold;" text="Peso Ideale (kg):" GridPane.rowIndex="6" />
                                <TextField promptText="Inserisci il peso ideale in kg" style="-fx-border-color: #ccc; -fx-border-radius: 5; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                                <Label style="-fx-font-weight: bold;" text="Dieta:" GridPane.rowIndex="7" />
                                <TextField promptText="Inserisci il nome della dieta" style="-fx-border-color: #ccc; -fx-border-radius: 5; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                            </children>
                            <padding>
                                <Insets bottom="15.0" top="10.0" />
                            </padding>
                            <rowConstraints>
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                            </rowConstraints>
                        </GridPane>
                        <Label onMouseClicked="#mostraSchermataModificaPassword" style="-fx-text-fill: #007bff; -fx-underline: true; -fx-font-size: 14px; -fx-cursor: hand;" text="Modifica Password" />
                        <HBox alignment="BOTTOM_RIGHT" spacing="15.0" VBox.vgrow="NEVER">
                            <children>
                                <Button style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-weight: bold; -fx-border-radius: 5; -fx-cursor: hand; -fx-font-size: 14px;" text="Salva Modifiche">
                                    <padding>
                                        <Insets top="15.0" />
                                    </padding>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>