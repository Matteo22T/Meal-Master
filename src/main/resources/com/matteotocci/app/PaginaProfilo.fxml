<AnchorPane prefHeight="500.0" prefWidth="900.0" stylesheets="@css/stile_PaginaProfilo.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.matteotocci.app.controller.PaginaProfilo">
    <children>
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="500.0" prefWidth="180.0" style="-fx-background-color: #f0f0f0;">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="180.0" style="-fx-padding: 10;">
                    <children>
                        <ImageView fx:id="profileImage" fitHeight="60.0" fitWidth="60.0" onMouseClicked="#AccessoProfilo" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@immagini/omino_profilo.jpg" />
                            </image>
                        </ImageView>
                        <Label fx:id="nomeUtenteSidebarLabel" style="-fx-padding: 0 0 0 10; -fx-font-size: 14px;" text="Nome Utente" />
                    </children>
                </HBox>
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="60.0" prefWidth="180.0" style="-fx-cursor: hand;" text="Dashboard" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="65.0" prefWidth="180.0" style="-fx-cursor: hand;" text="Impostazioni" />
                <Button fx:id="BottoneAlimenti" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#AccessoAlimenti" prefHeight="70.0" prefWidth="180.0" style="-fx-cursor: hand;" text="Alimenti" />
